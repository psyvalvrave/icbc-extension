{
  "manifest_version": 3,
  "name": "ICBC Booking Helper",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "scripting",
    "storage" 
  ],
  "icons": {
    "16": "icbc-extension-16.png",
    "48": "icbc-extension-48.png",
    "128": "icbc-extension-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icbc-extension-16.png",
      "48": "icbc-extension-48.png",
      "128": "icbc-extension-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.icbc.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}